 
pkgname=manjaro-tools-livecd
pkgname=('manjaro-tools-livecd' 'manjaro-tools-livecd-init')
pkgver=0.9.5
pkgrel=1
arch=('any')
url=""
license=('GPL')
source=("")
sha256sums=('')

# pkgver() {
# 	cd ${srcdir}/${pkgname}
# 	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
# }

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    LIBDIR=${PREFIX}/lib/manjaro-tools \
	    DESTDIR=${pkgdir}
}

package_manjaro-tools-livecd() {
	depends=('manjaro-tools')

	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    LIBDIR=${PREFIX}/lib/manjaro-tools \
	    DESTDIR=${pkgdir} \
	install
}

package_manjaro-tools-livecd-init() {
	cd ${srcdir}/${pkgname}-${pkgver}
	depends=('manjaro-tools-livecd')
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    LIBDIR=${PREFIX}/lib/manjaro-tools \
	    DESTDIR=${pkgdir} \
	install
}
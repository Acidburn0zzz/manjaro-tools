 
pkgname=livecd
pkgver=0.9.5
pkgrel=1
arch=('any')
url=""
license=('GPL')
depends=('manjaro-tools')
source=("")
sha256sums=('')

# pkgver() {
# 	cd ${srcdir}/${pkgname}
# 	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
# }

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    LIBDIR=${PREFIX}/lib/manjaro-tools \
	    DESTDIR=${pkgdir}
}

package_livecd() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    LIBDIR=${PREFIX}/lib/manjaro-tools \
	    DESTDIR=${pkgdir} \
	install
}

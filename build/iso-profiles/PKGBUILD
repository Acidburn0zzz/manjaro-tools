pkgname=iso-profiles
pkgver=0.8.11
pkgrel=1
arch=('any')
url=""
license=('GPL')
depends=('manjaro-tools' 'livecd-openrc' 'livecd-init')
makedepends=('git')
source=()
sha256sums=('')


# pkgver() {
# 	cd ${srcdir}/manjaro-tools
# 	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
# }

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    DESTDIR=${pkgdir}
}

package_livecd-openrc() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make SYSCONFDIR=/etc \
	    PREFIX=/usr \
	    DATADIR=${PREFIX}/share/manjaro-tools \
	    DESTDIR=${pkgdir} \
	install
}